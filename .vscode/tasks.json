  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "watch-build",
      "path": "server/",
      "problemMatcher": ["$tsc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "npm",
      "script": "watch-test",
      "path": "server/",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}
